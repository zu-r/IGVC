<?xml version="1.0"?>
<robot name="multipleshapes">
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.6 0.6 0.2"/>
      </geometry>
      <origin xyz = "0 0 0.05"/>

    </visual>
  </link>

  <link name="wheel1">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <origin rpy = "${pi/2} 0 0" xyz = "0 -0.3 0"/>
    </visual>
  </link>

    <link name="wheel2">
    <visual>
      <geometry>
        <cylinder length="0.2" radius="0.1"/>
      </geometry>
      <origin rpy = "${pi/2} 0 0" xyz = "0 0.3 0"/>
    </visual>
  </link>

  <joint name="base_link_to_wheel1" type="continuous">
    <parent link="base_link"/>
    <child link="wheel1"/>
  </joint>

  <joint name="base_link_to_wheel2" type="continuous">
    <parent link="base_link"/>
    <child link="wheel2"/>
    <origin xyz = "0 -0.3 0"/>

  </joint>
</robot>